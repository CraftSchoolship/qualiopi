<odoo>
    <record id="view_workflow_form" model="ir.ui.view">
        <field name="name">workflow.form</field>
        <field name="model">workflow.workflow</field>
        <field name="arch" type="xml">
            <form string="Workflow">
                <sheet>
                    <group>
                        <field name="indicator_number"/>
                        <field name="sequence"/>
                        <field name="summary"/>
                        <field name="partner_id"/>
                        <field name="verification_status"/>
                        <field name="description"/>
                        <field name="link"/>
                    </group>
                    <notebook>
                        <page name="description_page" string="Description">
                            <field name="description" widget="html"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                    <field name="activity_ids" widget="mail_activity"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_workflow_tree" model="ir.ui.view">
        <field name="name">workflow.tree</field>
        <field name="model">workflow.workflow</field>
        <field name="arch" type="xml">
            <tree string="Workflow">
                <field name="sequence" widget="handle"/>
                <field name="indicator_number"/>
                <field name="summary"/>
                <field name="partner_id" widget="many2many_avatar_user"/>
                <field name="verification_status" 
                       decoration-success="verification_status=='verified'" 
                       decoration-danger="verification_status=='not_verified'"
                       widget="badge"/>
            </tree>
        </field>
    </record>

    <record id="act_open_workflow_view" model="ir.actions.act_window">
        <field name="name">Qualiopi Workflow</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">workflow.workflow</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="qualiopi_workflow" name="Qualiopi Workflow" action="act_open_workflow_view" sequence="1"/>
</odoo>
