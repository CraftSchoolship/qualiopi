<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
    
        <record id="qualiopi_inherited" model="ir.ui.view">
            <field name="name">op.course.form</field>
            <field name="model">op.course</field>
            <field name="inherit_id" ref="openeducat_core.view_op_course_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group" position="before">
                <h4><field name="priority" widget="priority"/></h4>
                </xpath>
                <xpath expr="//group" position="before">
                    <field name="course_image" widget="image" class="oe_avatar" string="Course Image"/>
                </xpath>
                <xpath expr="//field[@name='name']" position="after">
                    <label for="duration_hours" string="Duration (Hours)"/>
                    <h4><field name="duration_hours" string="Duration (Hours)"/></h4>
                </xpath>
                <xpath expr="//field[@name='name']" position="after">
                    <label for="pricing" string="Price"/>
                    <h4><field name="pricing" string="Pricing"/></h4>
                </xpath>
                <xpath expr="//notebook" position="inside">
                    <page string="Description">
                        <field name="description" widget="html"/>
                    </page>
                </xpath>
                <xpath expr="//notebook" position="inside">
                    <page string="Objectives">
                        <field name="objectives" widget="html"/>
                    </page>
                </xpath>
                <xpath expr="//notebook" position="inside">
                    <page string="Prerequisites">
                        <field name="prerequisites" widget="html"/>
                    </page>
                </xpath>
                <xpath expr="//notebook" position="inside">
                    <page string="Accessibility">
                        <field name="accessibility" widget="html" nolabel="1" placeholder="In case of a disability, the training is open, and we encourage you to contact us to discuss adaptation options!"/>
                    </page>
                </xpath>
                <xpath expr="//notebook" position="inside">
                    <page string="Educational means">
                        <field name="educational_means" widget="html" />
                    </page>
                </xpath>
                <xpath expr="//notebook" position="inside">
                    <page string="Assessment methods">
                        <field name="assessment_methods" widget="html"/>
                    </page>
                </xpath> 
                <xpath expr="//notebook" position="inside">
                    <page string="Access">
                        <field name="access" widget="html" nolabel="1" placeholder="Access Via an Interview "/>
                    </page>
                </xpath>
                <xpath expr="//notebook" position="inside">
                    <page string="Deadlines">
                        <field name="deadline" widget="html"/>
                    </page>
                </xpath>
                <xpath expr="//notebook" position="after">
                    <sheet>
            
                        <group>
                            <group class="certification_info">
                                <field name="certification_image" widget="image" class="oe_avatar" string="Certification Image"/>
                                <field name="certification_pass_rates" widget="html"/>
                                <field name="validate_specific_skills" widget="html"/>
                                <field name="equivalent_certifications" widget="html"/>
                                <field name="switch_between_certifications" widget="html"/>
                                <field name="further_training_options" widget="html"/>
                                <field name="job_opportunities" widget="html"/>
                            </group>
                        </group>
                    </sheet>
                </xpath>
            </field>
        </record>

        


	</data>
</odoo>